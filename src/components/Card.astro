---
import { Image } from "astro:assets";
import type { Article } from "../../interfaces";

interface Props {
  article: Article;
}

const { article } = Astro.props;
const release = new Date(article.release_date);
---

<li class="link-card">
  <a href=`/articles/${article._id}`>
    <div class="link-card-header">
      <Image
        class="link-card-image"
        src={article.image}
        alt={article.title}
        width={300}
        height={150}
      />
      <h2>
        {article.title}
        <span>&rarr;</span>
      </h2>
    </div>
    <div class="link-card-body">
      <p>
        Rating: {article.rating} / 5
      </p>
      <p>
        Release Date: {release.toLocaleDateString()}
      </p>
      <p>
        Genre: {article.genre}
      </p>
    </div>
  </a>
</li>

<style>
  .link-card {
    list-style: none;
    display: flex;
    flex-direction: column;
    padding: 5px;
    background-color: rgb(var(--accent));
    border-radius: 7px;
    overflow: hidden;
    position: relative;
    transition: transform 0.8s cubic-bezier(0.22, 1, 0.36, 1);
    width: 400px;
    height: auto;
  }
  .link-card:hover .link-card-header {
    transform: translateY(-100%);
  }
  .link-card:hover .link-card-body {
    transform: translateY(0);
  }
  .link-card a {
    text-decoration: none;
    color: #fff;
  }
  .link-card-header {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20px;
    box-sizing: border-box;
    transition: transform 0.8s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .link-card-body {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20px;
    box-sizing: border-box;
    background-color: rgb(var(--accent-light));
    transition: transform 0.8s cubic-bezier(0.22, 1, 0.36, 1);
    transform: translateY(100%);
  }
  h2 {
    margin: 0;
    font-size: 30px;
    text-align: center;
    color: #fff;
    font-family: "Jersey 10", sans-serif;
    font-weight: 400;
    font-style: normal;
  }
  p {
    margin: 0;
    text-align: center;
    color: white;
  }
</style>
