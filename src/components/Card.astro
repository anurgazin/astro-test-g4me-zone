---
import { Image } from 'astro:assets';
interface Props {
	_id: string;
	title: string;
	body: string;
	rating: number;
	release_date: Date;
	genre: string;
	image: string;
}

const {	_id, title, body, rating, release_date, genre, image } = Astro.props;
const release = new Date(release_date);
---

<li class="link-card">
		<div class="link-card-header">
			<Image class="link-card-image" src={image} alt={title} width={300} height={150} />
			<h2>
				{title}
				<span>&rarr;</span>
			</h2>
			<p>
				Rating: {rating} / 5
			</p>
			<p>
				Release Date: {release.getFullYear()}-{release.getMonth()}-{release.getUTCDate()}
			</p>
			<p>
				Genre: {genre}
			</p>
		</div>
		<div class="link-card-body">
			<p>
				{body.slice(0, 500)}...
			</p>
		</div>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		flex-direction: column;
		padding: 5px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card-header p {
		font-size: 1.05rem;
	}
	.link-card-body p {
		border: 1px solid #999;
		padding: 5px;
		font-size: 1rem;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
